{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions" : [
    "contextMenus",
    "sidePanel",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"

  },
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "matches": ["https://*/*"]
    }
  ],
  "side_panel": {
    "default_path": "build/index.html"
  },
  "action": {
    "default_popup": "../build/index.html",
    "default_icon": "hello_extensions.png"
  }
}
